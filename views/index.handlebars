<script type="text/javascript">
function resetModal(){
  $('#formModalBody').removeClass('d-none');
  $('#subscribeBtn').removeClass('d-none');
  $('#successModalBody').addClass('d-none');
}

function subscribe (){

  let subscriberData = {
    subscriberName: $('#subscriberName').val(),
    subscriberEmail: $('#subscriberEmail').val()
  }

  if (subscriberData.subscriberEmail.length > 1 && subscriberData.subscriberName.length > 1 ){
      fetch("/api/bloget/subscribe", {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify(subscriberData),
    }).then(response => response.json())
      .then((data)=>{
        if (data.response){
          $('#subscribeForm')[0].reset();
          $('#formModalBody').addClass('d-none');
          $('#subscribeBtn').addClass('d-none');
          $('#successModalBody').removeClass('d-none');
        }
        if (data.message){
          $('#errorMessage').text(data.message);
        }
      });
  }
}

</script>

