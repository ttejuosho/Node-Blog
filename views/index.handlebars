<div class="modal blurModalBg" id="subscribeModal" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="subscribeModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title font-weight-bold" id="subscribeModalLabel">Subscribe to Bloget</h5>
      </div>
      <form id="subscribeForm" class="form" novalidate>
        <div id="formModalBody" class="modal-body">
          <h6 class="text-danger" id="errorMessage">{{error}}</h6>
          <label for="subscriberName" class="label font-weight-bold">Name</label>
          <input type="text" id="subscriberName" name="subscriberName" class="form-control" required="" autofocus="">
          {{#if errors}}
            {{#each errors}}
                {{#ifEquals param "subscriberName"}}
                    <div class="messages text-danger font-weight-bold">{{msg}}</div>
                {{/ifEquals}}
            {{/each}}
          {{/if}}
          <label for="subscriberEmail" class="label font-weight-bold mt-2">Email Address</label>
          <input type="email" id="subscriberEmail" name="subscriberEmail" class="form-control" required="">
          {{#if errors}}
            {{#each errors}}
                {{#ifEquals param "subscriberEmail"}}
                    <div class="messages text-danger font-weight-bold">{{msg}}</div>
                {{/ifEquals}}
            {{/each}}
          {{/if}}
        </div>
        <div id="successModalBody" class="modal-body d-none">
          <p class="text-center m-4"><i class="fas fa-check-circle fa-2x text-success"></i><h4 class="mt-3">We got your information, we will keep in touch.</h4></p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-outline-danger" data-dismiss="modal" onclick="resetModal()">Close</button>
          <button type="button" class="btn btn-outline-secondary" id="subscribeBtn" onclick="subscribe()">Subscribe</button>
        </div>
      </form>
    </div>
  </div>
